@page
@model DoctorApointmentSystem.Pages.Doctors.IndexModel

@{
    ViewData["Title"] = "Appointment";
}

<h1>Doctors List</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Add new Doctor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].DoctorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Consultant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Doctor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorId)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consultant)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.DoctorId">Customize</a> 
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.DoctorId">Details</a> 
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.DoctorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
